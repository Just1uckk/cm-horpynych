{
    "compilerOptions": {
      "baseUrl": "./",
      "target": "ES6",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "moduleResolution": "node",
      "paths": {
        "@babel/parser": ["./node_modules/@babel/parser"],
        "@babel/types": ["./node_modules/@babel/types"],
        "undici-types": ["./node_modules/undici/types"]
      },
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
  }
  